<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="230dp"
    android:layout_margin="4dp"
    android:foreground="?android:selectableItemBackground">
    <!--    android:clickable="true"
    android:focusable="true"-->

    <ImageView
        android:id="@+id/media_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/anna_salvador" />
    <!--android:adjustViewBounds="true"-->
    <TextView
        android:id="@+id/media_testo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#9fff"
        android:padding="4dp"
        android:text="Titolo dell'immagine
nome_file.jpg"
        android:textColor="#000" />

    <TextView
        android:id="@+id/media_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/cerchietto"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:text="123"
        android:textColor="#fff" />

    <ProgressBar
        android:id="@+id/media_circolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>
