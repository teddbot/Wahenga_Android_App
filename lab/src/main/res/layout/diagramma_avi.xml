<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="37dp"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/avi_connettore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/num_avi"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="14dp"
            android:layout_height="4px"
            android:background="#fff" />

        <View
            android:layout_width="3px"
            android:layout_height="23dp"
            android:background="#fff" />
    </LinearLayout>

    <TextView
        android:id="@+id/num_avi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/casella_maschio"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:paddingRight="6dp"
        android:paddingBottom="3dp"
        android:text="12" />

    <TextView
        android:id="@+id/num_ave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avi_connettore"
        android:background="@drawable/casella_femmina"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:paddingRight="6dp"
        android:paddingBottom="3dp"
        android:text="34"
        android:visibility="visible" />

</RelativeLayout>